<UserControl x:Class="LAB_10.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LAB_10"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Button Name="btnClickMe" Click="BtnClickMe_Click" PreviewMouseDoubleClick="BtnClickMe_PreviewMouseDoubleClick">
            <StackPanel Orientation="Horizontal">
                <Label Height="60" FontSize="30" Content="Label display"/>
                <Button Name="innerButton" Content="Inner Button" Height="50" Width="100" Canvas.Top="24" Canvas.Left="10" Click="InnerButton_Click" PreviewMouseDoubleClick="InnerButton_PreviewMouseDoubleClick"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
